@{
}
<h1>Delete Event</h1>
<form method="post">
    @foreach(var e in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <span>@e.Name</span>
                <input type="checkbox" name="eventIds" value="@e.Id">
            </label>
        </div>
    }
    <input type="submit" value="Delete selected Events" class="btn btn-danger" />
</form>
