@{
}

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@* <tr> is a row, <th> adds table headings <td> create data cells *@
@if (ViewBag.events.Count == 0)
{
    <p>No events!</p>
}
else
{
    <table class="table table-danger table-striped border border-dark border-3">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Edit Link
            </th>

        </tr>
        @foreach (Event e in ViewBag.events)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Description</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@e.Id">Edit Event</a></td>
            </tr>
        }
    </table>
}